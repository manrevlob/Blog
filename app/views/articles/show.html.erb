<div class="container">

  <h1><%= @article.title %></h1>

  <div class="field">
    <%= image_tag @article.cover.url %>
  </div>

  <div class="field">
    <%= @article.body %>
  </div>
  <p>
    NÂº visitas: <%= @article.visits_count %>
  </p>
  <% unless @article.user.nil? %>
    <p>
      Escrito por: <%= @article.user.email  %>
    </p>
  <% end %>

  <div class="field">
    <h3>Comentarios:</h3>

    <%= render 'comments/form' %>

    <ul id="comments-box">
    <% @article.comments.each do |comment| %>
        <fieldset>
          <li>
            <%= comment.body %><br>
            <hr>
            Escrito por: <%= comment.user.email %>
          </li>
        </fieldset>
    <% end %>
    </ul>

  </div>

  <%= link_to "Atras", :back, class:"blue" %>

</div>