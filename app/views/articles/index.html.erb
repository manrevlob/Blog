<div class="container">
  <center><h2><%= link_to "Crear nuevo articulo", new_article_path %></h2></center>
</div>
<div class="container">
  <h1>Listado de articulos</h1>
  <hr>
  <br>

  <% @articles.each do |a| %>

      <h1><%= link_to a.title, a, class:"blue" %></h1>

      <div>
        <p><%= Sanitize.fragment( a.body, Sanitize::Config::RELAXED ).html_safe %></p>
        <p><%= link_to "Eliminar", a, method: :delete, class:"red" %> - <%= link_to "Editar", edit_article_path(a), class:"blue" %></p>
      </div>

  <% end %>

  <%= will_paginate @articles %>
  
</div>