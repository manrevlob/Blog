<% @articles.each do |article| %>

    <h1><%= link_to article.title, article, class:"blue" %></h1>

    <div>
      <p><%= Sanitize.fragment( article.body, Sanitize::Config::RELAXED ).html_safe %></p>
      <p>
        <%= link_to "Eliminar", article, method: :delete, class:"red" %>
         - <%= link_to "Editar", edit_article_path(article), class:"blue" %>
        <% if article.may_publish? %>
          - <%= link_to "Publicar", "/articles/#{ article.id }/publish", class:"green", method: :put %>
        <% end %>
      </p>
    </div>

<% end %>